<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp">
    
    <TextView
        android:id="@+id/textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="right"
        android:paddingTop="10dp"
        android:minWidth="50dp"
        android:layout_toLeftOf="@+id/imageView_profile"
        android:layout_below="@+id/textView_username"
        android:paddingBottom="10dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:background="@drawable/bubble_arrow_right"
        android:textColor="#ff000000"
        android:text="Message content" />
    
    <ImageView
        android:id="@+id/imageView_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/textView_content"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_me" >
    </ImageView>
    
     
    <TextView
        android:id="@+id/textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView_content"
        android:layout_marginRight="10dp"
        android:textColor="#0000ff"
        android:layout_marginLeft="10dp"
        android:text="Username" />
    
    <TextView
        android:id="@+id/textView_time"
        android:layout_below="@+id/textView_content"
        android:layout_alignLeft="@+id/textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time" />
    
</RelativeLayout>
